@using MvcCv.Models.Entitiy
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    @{string renk = ""; }
    <div class="card">
        
        <div class="card-body">
            <div class="tab-content">
                <!-- /.tab-pane -->
                <div class="tab-pane active" id="timeline">
                    <!-- The timeline -->
                    <div class="timeline timeline-inverse">
                        
                            @foreach (var x in Model)
                            {

                                    <div class="time-label">
                                        @if (x.ID % 2 == 0)
                                        {
                                            renk = "success";
                                        }
                                        else
                                        {
                                            renk = "secondary";
                                        }
                                        <span class="bg-@renk">
                                            <a href="/Sertifika/SertifikaGetir/@x.ID">@x.Tarih</a>
                                        </span>
                                    </div>

                                    <div>

                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @x.Aciklama
                                            </div>

                                        </div>
                                    </div>

                            }

                    </div>

                </div>
                     <a href="/Sertifika/YeniSertifika/"  class="btn btn-info">Yeni Sertifika Kaydet</a>
            </div>
        </div>
   </div>
    

