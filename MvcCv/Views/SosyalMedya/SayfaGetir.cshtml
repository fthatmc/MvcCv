@model MvcCv.Models.Entitiy.TblSosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Sosyal Medya Hesabı Düzenleme Sayfası</h2>

<form method="post">

    
    @Html.Label("Sosyal Medya İsmi")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />
    @Html.Label("icon")
    @Html.TextBoxFor(x => x.icon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>


